(define PI 3.1415926)

(define (is x) (class-of x))

(define (int? x) (eqv? (is x) 'int))
(define (char? x) (eqv? (is x) 'char))
(define (float? x) (eqv? (is x) 'float))
(define (bool? x) (eqv? (is x) 'bool))
(define (list? x) (eqv? (is x) 'list))
(define (quote? x) (eqv? (is x) 'quote))
(define (string? x) (eqv? (is x) 'string))

(define (zero? n) (if (== n 0) #t #f))
(define (positive? n) (if (> n 0) #t #f))
(define (negative? n) (if (< n 0) #t #f))
